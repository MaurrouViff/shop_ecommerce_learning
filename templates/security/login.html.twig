{% extends 'base.html.twig' %}

{% block title %}Connexion - Ecommerce{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md p-6 sm:p-8 bg-white rounded-2xl shadow-lg">
            <form method="post" class="space-y-6 sm:space-x-8">
                {% if error %}
                    <div class="text-red-800 text-lg sm:text-xl text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div>
                    <h1 class="text-2xl font-bold text-gray-900 text-center mb-4 sm:mb-6">Se connecter</h1>
                </div>

                <div>
                    <label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-1 sm:mb-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" autocomplete="email" placeholder="Votre email" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-1 sm:mb-2">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" autocomplete="current-password" placeholder="Votre mot de passe" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center">
                    <label class="flex items-center">
                        <input type="checkbox" name="_remember_me" class="text-sm text-gray-700">
                        <span class="ml-2 text-sm">Se souvenir de moi</span>
                    </label>
                </div>

                <div>
                    <button class="w-full py-2 sm:py-3 px-4 bg-black text-white font-medium rounded-lg shadow-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2" type="submit">
                        Se connecter
                    </button>
                </div>

                <div class="flex items-center justify-center text-center text-sm">
                    <p>Vous n'avez pas encore de compte ?
                        <a href="{{ path('app_register') }}" class="text-red-500 hover:underline">Inscrivez-vous</a>.
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
