{% extends 'base.html.twig' %}

{% block title %}Changer mot de passe - Ecommerce{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md p-6 sm:p-8 bg-white rounded-2xl shadow-lg">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-6">Changer de mot de passe</h1>

    {{ form_start(form, { attr: { class: 'space-y-8 sm:space-y-6'} } ) }}

    <div>
        {{ form_label(form.currentPassword, 'Votre mot de passe', { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2'}} ) }}
        {{ form_widget(form.currentPassword, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900'}} )}}
        {{ form_errors(form.currentPassword) }}
    </div>

    <div>
        {{ form_label(form.newPassword, 'Votre nouveau mot de passe', { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2'} }) }}
        {{ form_widget(form.newPassword, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900'}} ) }}
        {{ form_errors(form.newPassword) }}
    </div>

    <div>
        {{ form_label(form.repeatPassword, 'Répéter votre mot de passe', { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2'}} ) }}
        {{ form_widget(form.repeatPassword, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900' }} ) }}
        {{ form_errors(form.repeatPassword) }}
    </div>

    <div>
        <button type="submit" class="w-full py-2 sm:py-3 px-4 bg-black text-white font-medium rounded-lg shadow-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
            Confirmer
        </button>
    </div>

    {{ form_end(form) }}
    </div>
</div>
{% endblock %}