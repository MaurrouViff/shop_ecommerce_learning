<!doctype html>
<html lang="en" class="scroll-smooth h-screen">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('styles/output.css') }}">
    <link rel="icon" href="{{ asset('logo/logo.png') }}">
    <title>{% block title %}{% endblock %}</title>
</head>
<body class="flex flex-col h-screen">
<header class="bg-gray-200">
    <nav class="flex items-center justify-between px-4 py-3 md:px-8">
        <!-- Logo / Accueil -->
        <a href="{{ path('app_home') }}" class="text-xl font-bold"><img src="{{ asset('logo/logo.png') }}" alt="Logo" class="w-12 h-12"></a>

        <!-- Bouton Menu Burger (Mobile) -->
        <button id="menu-toggle" class="block md:hidden focus:outline-none">
            <svg class="w-8 h-8 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>

        <!-- Menu Desktop -->
        <ul class="hidden md:flex items-center gap-5">
            <li>
                <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
            </li>
            <li>
                <a href="{{ path('app_magasin') }}" class="nav-link">Magasin</a>
            </li>
            {% if app.user is defined and app.user %}
                <li>
                    <a href="{{ path('app_mon_compte') }}" class="nav-link">Mon Compte</a>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}" class="rounded-sm py-1.5 px-3.5 outline-2 outline-offset-0 outline-red-500 text-red-500">Se déconnecter</a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('app_login') }}" class="nav-link">Connexion</a>
                </li>
            {% endif %}
        </ul>
    </nav>

    <!-- Menu Mobile -->
    <div id="mobile-menu" class="hidden md:hidden bg-gray-100">
        <ul class="flex flex-col items-center space-y-4 py-4">
            <li>
                <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
            </li>
            <li>
                <a href="{{ path('app_magasin') }}" class="nav-link">Magasin</a>
            </li>
            {% if app.user is defined and app.user %}
                <li>
                    <a href="{{ path('app_mon_compte') }}" class="nav-link">Mon Compte</a>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}" class="rounded-sm py-1.5 px-3.5 outline-2 outline-offset-0 outline-red-500 text-red-500">Se déconnecter</a>
                </li>

            {% else %}
                <li>
                    <a href="{{ path('app_login') }}" class="nav-link">Connexion</a>
                </li>
            {% endif %}
        </ul>
    </div>
</header>
<div class="grow">
{% block body %}{% endblock %}
</div>
<footer class="flex items-center justify-center min-h-10 bg-gray-100">
    <div class="grid md:grid-cols-2 grid-cols-1 lg:gap-4 md:gap-3 gap-2">
        <a href="#" class="text-red-400 lg:text-xl md:text-base text-xs hover:text-red-700 hover:underline">Twitter</a>
        <a href="#" class="text-red-400 lg:text-xl md:text-base text-xs hover:text-red-700 hover:underline">Instagram</a>
        <a href="#" class="text-red-400 lg:text-xl md:text-base text-xs hover:text-red-700 hover:underline">Discord</a>
        <a href="#" class="text-red-400 lg:text-xl md:text-base text-xs hover:text-red-700 hover:underline">Pinterest</a>
    </div>
</footer>
</body>
<script type="text/javascript" src="{{ asset('js/menu-burger.js') }}"></script>
</html>