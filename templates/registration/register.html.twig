{% extends 'base.html.twig' %}

{% block title %}Inscription - Ecommerce{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md p-6 sm:p-8 bg-white rounded-2xl shadow-lg">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-6">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, { attr: { class: 'space-y-6 sm:space-y-8' } }) }}

            <div>
                {{ form_label(registrationForm.email, null, { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2' } }) }}
                {{ form_widget(registrationForm.email, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.nom, 'Nom', { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2' } }) }}
                {{ form_widget(registrationForm.nom, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900' } }) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', { label_attr: { class: 'block text-sm sm:text-lg font-medium text-gray-700 mb-2' } }) }}
                {{ form_widget(registrationForm.plainPassword, { attr: { class: 'w-full px-4 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'h-4 w-4 sm:h-5 sm:w-5 text-gray-900 border-gray-300 rounded' } }) }}
                {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', { label_attr: { class: 'text-sm sm:text-lg text-gray-700' } }) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div>
                <button type="submit" class="w-full py-2 sm:py-3 px-4 bg-black text-white font-medium rounded-lg shadow-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
                    S'inscrire
                </button>
            </div>

            <div class="flex items-center justify-center">
                <p class="text-sm sm:text-lg">Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-red-500 hover:underline">Connectez-vous</a>.</p>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
